FORM DB_UPD_YZ_VIEW_RULE_LOG .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO YZ_VIEW_RULE_LOG.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_YZ_VIEW_RULE_LOG-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM YZTABL_RULE_LOG WHERE
  MODEL = YZ_VIEW_RULE_LOG-MODEL AND
  PROCESS = YZ_VIEW_RULE_LOG-PROCESS AND
  OBJ = YZ_VIEW_RULE_LOG-OBJ AND
  SUB_OBJ = YZ_VIEW_RULE_LOG-SUB_OBJ .
    IF SY-SUBRC = 0.
    DELETE YZTABL_RULE_LOG .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM YZTABL_RULE_LOG WHERE
  MODEL = YZ_VIEW_RULE_LOG-MODEL AND
  PROCESS = YZ_VIEW_RULE_LOG-PROCESS AND
  OBJ = YZ_VIEW_RULE_LOG-OBJ AND
  SUB_OBJ = YZ_VIEW_RULE_LOG-SUB_OBJ .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR YZTABL_RULE_LOG.
    ENDIF.
YZTABL_RULE_LOG-MANDT =
YZ_VIEW_RULE_LOG-MANDT .
YZTABL_RULE_LOG-MODEL =
YZ_VIEW_RULE_LOG-MODEL .
YZTABL_RULE_LOG-PROCESS =
YZ_VIEW_RULE_LOG-PROCESS .
YZTABL_RULE_LOG-OBJ =
YZ_VIEW_RULE_LOG-OBJ .
YZTABL_RULE_LOG-SUB_OBJ =
YZ_VIEW_RULE_LOG-SUB_OBJ .
YZTABL_RULE_LOG-ACTIVE =
YZ_VIEW_RULE_LOG-ACTIVE .
    IF SY-SUBRC = 0.
    UPDATE YZTABL_RULE_LOG ##WARN_OK.
    ELSE.
    INSERT YZTABL_RULE_LOG .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_YZ_VIEW_RULE_LOG-UPD_FLAG,
STATUS_YZ_VIEW_RULE_LOG-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
